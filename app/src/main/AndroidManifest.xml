<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tec.sopaletrassinonimosantonimos.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="false"
        android:smallScreens="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeNoActionBar">
        <activity
            android:name=".ActividadInicial"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrarCuenta"
            android:label="@string/actividad_crearCuenta"
            android:parentActivityName=".ActividadInicial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.ActividadInicial" />
        </activity>
        <activity
            android:name=".MenuPrincipal"
            android:label="@string/actividad_menuPrincipal"
            android:parentActivityName=".ActividadInicial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.ActividadInicial" />
        </activity>
        <activity
            android:name=".SeleccionDificultad"
            android:label="@string/actividad_dificultadJuego"
            android:parentActivityName=".MenuPrincipal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.MenuPrincipal" />
        </activity>
        <activity
            android:name=".SeleccionTema"
            android:label="@string/actividad_temaJuego"
            android:parentActivityName=".SeleccionDificultad"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.SeleccionDificultad" />
        </activity>
        <activity
            android:name=".ResultadoJuego"
            android:label="@string/actividad_resultadoJuego"
            android:parentActivityName=".MenuPrincipal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.MenuPrincipal" />
        </activity>
        <activity
            android:name=".ActividadJuego"
            android:parentActivityName=".MenuPrincipal"
            android:screenOrientation="portrait"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.MenuPrincipal" />
        </activity>
        <activity
            android:name=".Resultados"
            android:label="@string/actividad_resultados"
            android:parentActivityName=".MenuPrincipal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.MenuPrincipal" />
        </activity>
        <activity
            android:name=".Agradecimiento"
            android:label="@string/actividad_agradecimientos"
            android:parentActivityName=".MenuPrincipal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tec.sopaletrassinonimosantonimos.app.MenuPrincipal" />
        </activity>
        <activity android:name=".Instrucciones"></activity>
    </application>

</manifest>