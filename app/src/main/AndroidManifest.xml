<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tec.sopaletrassinonimosantonimos.app" >

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar">
        <activity
                android:name=".ActividadInicial"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".RegistrarCuenta"
                android:label="@string/title_activity_registrar_cuenta"
                android:parentActivityName=".ActividadInicial"
                android:theme="@style/TemaActionBarAzulClaro">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.tec.sopaletrassinonimosantonimos.app.ActividadInicial"/>
        </activity>
        <activity
                android:name=".MenuPrincipal"
                android:label="@string/title_activity_menu_principal"
                android:parentActivityName=".ActividadInicial"
                android:theme="@style/TemaActionBarAzulClaro">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.tec.sopaletrassinonimosantonimos.app.ActividadInicial"/>
        </activity>
        <activity
                android:name=".TemaJuego"
                android:label="@string/title_activity_tema_juego"
                android:parentActivityName=".MenuPrincipal"
                android:theme="@style/TemaActionBarAzulClaro">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.tec.sopaletrassinonimosantonimos.app.MenuPrincipal"/>
        </activity>
    </application>

</manifest>
