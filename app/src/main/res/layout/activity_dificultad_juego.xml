<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".DificultadJuego"
              android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/texto_SeleccioneDificultad"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"/>

    <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/boton_dificultad_facil"
            android:id="@id/botonDificultadFacil"
            android:layout_gravity="center_horizontal"
            android:onClick="seleccionarDificultad"
            style="@style/estiloBotonAzulClaro"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10"/>

    <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/boton_dificultad_media"
            android:id="@id/botonDificultadMedia"
            android:layout_gravity="center_horizontal"
            android:onClick="seleccionarDificultad"
            style="@style/estiloBotonAzulClaro"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10"/>

    <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/boton_dificultad_dificil"
            android:id="@id/botonDificultadDificil"
            android:layout_gravity="center_horizontal"
            android:onClick="seleccionarDificultad"
            style="@style/estiloBotonAzulClaro"/>
</LinearLayout>
