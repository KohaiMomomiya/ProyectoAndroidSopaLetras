<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".SeleccionTema"
              android:weightSum="1">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texto_seleccioneTema"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:singleLine="true"
            android:textSize="16sp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"/>

    <Button
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:text="@string/boton_sinonimos"
            android:id="@id/botonSinonimos"
            android:layout_gravity="center_horizontal"
            android:onClick="temaSeleccionado"
            style="@style/estiloBotonAzulClaro"/>
    <FrameLayout
            android:layout_width="264dp"
            android:layout_height="126dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sinonimos"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"/>
    <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/boton_antonimos"
            android:id="@id/botonAntonimos"
            android:layout_gravity="center_horizontal"
            android:onClick="temaSeleccionado"
            style="@style/estiloBotonAzulClaro"/>
    <FrameLayout
            android:layout_width="228dp"
            android:layout_height="132dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/antonimos"/>
</LinearLayout>
