<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActionBarAzulClaro" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/azulClaroUI</item>
        <item name="android:colorPrimary">@color/azulClaroUI</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarAzulClaro</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/azulClaroUI</item>
        <item name="colorPrimaryDark">@color/azulOscuroUI</item>
        <item name="colorAccent">@color/azulClaroUI</item>

        <item name="android:navigationBarColor">@color/azulOscuroUI</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0px</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/azulClaroUI</item>
        <item name="colorPrimaryDark">@color/azulOscuroUI</item>
        <item name="colorAccent">@color/azulClaroUI</item>
        <item name="android:navigationBarColor">@color/azulOscuroUI</item>
    </style>

</resources>