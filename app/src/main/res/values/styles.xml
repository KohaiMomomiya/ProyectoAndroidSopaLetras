<resources>
    <!-- Botones Rojos -->
    <style name="estiloBotonRojo" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/botonrojo_esquinasredondas</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Botones Azul Claro -->
    <style name="estiloBotonAzulClaro" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/botonazulclaro_esquinasredondas</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EstiloEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#ADADAD</item>
        <item name="android:textColor">@android:color/widget_edittext_dark</item>
        <item name="android:textColorHint">#ADADAD</item>
    </style>

    <style name="CeldaSopaLetras" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>

        <item name="android:background">@drawable/letra_sopa</item>
    </style>

    <style name="TextoPuntuacion">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/azulClaroUI</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PalabraObjetivo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grisPalabras</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ActionBarAzulClaro" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/azulClaroUI</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarAzulClaro</item>
        <item name="colorPrimary">@color/azulClaroUI</item>
        <item name="colorPrimaryDark">@color/azulOscuroUI</item>
        <item name="colorAccent">@color/azulClaroUI</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0px</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/azulClaroUI</item>
        <item name="colorPrimaryDark">@color/azulOscuroUI</item>
        <item name="colorAccent">@color/azulClaroUI</item>
    </style>

    <style name="AppThemeNoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppThemeNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>