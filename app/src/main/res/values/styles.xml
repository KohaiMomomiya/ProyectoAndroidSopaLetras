<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Botones Rojos -->
    <style name="estiloBotonRojo" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/botonrojo_esquinasredondas</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Botones Azul Claro -->
    <style name="estiloBotonAzulClaro" parent="Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/botonazulclaro_esquinasredondas</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarAzulClaro" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/azulClaroUI</item>
        <item name="background">@color/azulClaroUI</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarAzulClaro</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/azulClaroUI</item>
        <item name="colorPrimaryDark">@color/azulOscuroUI</item>
        <item name="colorAccent">@color/azulClaroUI</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0px</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/azulClaroUI</item>
        <item name="colorPrimaryDark">@color/azulOscuroUI</item>
        <item name="colorAccent">@color/azulClaroUI</item>
    </style>
</resources>